<%- include("partials/header-start") %> 
<!-- Insert custom CSS imports here -->
<link rel='stylesheet' href='/stylesheets/projects.css' />
<%- include("partials/header-end") %>

<h1>Projects</h1>
<button id="toggle-view-button">Delve Deeper (Advanced View)</button>
<section id="section-projects">
  <% for (project of projects) { %>
      <div class="div-projects">
        <h3><%- project.name %></h3>
        <h4>IMG URL: </h4>
        <a href="<%- project.img %>"><%- project.img %> </a>
        <p class="view-simple"><%- project.descriptionSimple %></p>
        <p class="view-advanced hidden"><%- project.descriptionAdvanced %></p>
      </div>
  <% } %> 
</section>

<!-- Insert custom JS imports here -->
<script src="/scripts/projects.js"></script>
<%- include("partials/footer") %>